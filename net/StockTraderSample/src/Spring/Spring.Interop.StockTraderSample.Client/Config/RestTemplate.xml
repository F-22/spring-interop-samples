<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

  <object id="restTemplate" type="Spring.Rest.Client.RestTemplate, Spring.Rest">
    <constructor-arg name="baseAddress" value="http://localhost:1000"/>
    <property name="MessageConverters">
      <list>
        <object type="Spring.Http.Converters.Json.NJsonHttpMessageConverter, Spring.Http.Converters.NJson"/>
      </list>
    </property>
    <property name="RequestFactory.UseDefaultCredentials" value="true"/>
    <property name="RequestFactory.Timeout" value="10000"/>
  </object>

</objects>
